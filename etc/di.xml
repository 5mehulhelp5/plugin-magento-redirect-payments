<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference type="Worldline\RedirectPayment\WebApi\RedirectManagement" for="Worldline\RedirectPayment\Api\RedirectManagementInterface" />

    <type name="Magento\Checkout\Api\PaymentInformationManagementInterface">
        <plugin name="Worldline_RedirectPayment::SetPaymentProductAsPaymentMethod"
                type="Worldline\RedirectPayment\Plugin\Checkout\Model\PaymentInformationManagement\SetPaymentMethod"/>
    </type>
    <type name="Magento\Checkout\Api\GuestPaymentInformationManagementInterface">
        <plugin name="Worldline_RedirectPayment::GuestSetPaymentProductAsPaymentMethod"
                type="Worldline\RedirectPayment\Plugin\Checkout\Model\GuestPaymentInformationManagement\SetPaymentMethod"/>
    </type>

    <type name="Worldline\RedirectPayment\WebApi\RedirectManagement">
        <arguments>
            <argument name="dataAssignerPool" xsi:type="array">
                <item name="device-data" xsi:type="object">Worldline\PaymentCore\Model\DataAssigner\DeviceDataAssigner</item>
                <item name="payment-data" xsi:type="object">Worldline\HostedCheckout\WebApi\RedirectManagement\PaymentMethodDataAssigner</item>
            </argument>
        </arguments>
    </type>

    <type name="Worldline\PaymentCore\Block\Customer\CardRenderer">
        <arguments>
            <argument name="paymentMethods" xsi:type="array">
                <item name="worldline_redirect_payment" xsi:type="const">Worldline\RedirectPayment\UI\ConfigProvider::CODE</item>
            </argument>
        </arguments>
    </type>

    <type name="Worldline\PaymentCore\Model\PaymentStatusCode\StatusCodePool">
        <arguments>
            <argument name="statusCodeRetrievers" xsi:type="array">
                <item name="worldline_redirect_payment" xsi:type="object">Worldline\HostedCheckout\Model\StatusCodeRetriever</item>
                <item name="worldline_redirect_payment_vault" xsi:type="object">Worldline\HostedCheckout\Model\StatusCodeRetriever</item>
            </argument>
        </arguments>
    </type>

    <type name="Worldline\PaymentCore\Model\ResourceModel\PendingOrderProvider">
        <arguments>
            <argument name="allowedPaymentMethods" xsi:type="array">
                <item name="worldline_redirect_payment" xsi:type="const">Worldline\RedirectPayment\UI\ConfigProvider::CODE</item>
                <item name="worldline_redirect_payment_vault" xsi:type="const">Worldline\RedirectPayment\UI\ConfigProvider::VAULT_CODE</item>
            </argument>
        </arguments>
    </type>

    <!-- ______________________________________ Payment method configuration ______________________________________ -->

    <type name="Worldline\RedirectPayment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Worldline\RedirectPayment\UI\ConfigProvider::CODE</argument>
        </arguments>
    </type>
    <virtualType name="Worldline\RedirectPayment\Model\Method\Adapter\Virtual" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">Worldline\RedirectPayment\UI\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Worldline\RedirectPayment\Block\Info\Virtual</argument>
            <argument name="valueHandlerPool" xsi:type="object">Worldline\RedirectPayment\Gateway\Config\ValueHandlerPool\Virtual</argument>
            <argument name="validatorPool" xsi:type="object">Worldline\RedirectPayment\Gateway\Validator\ValidatorPool\Virtual</argument>
            <argument name="commandPool" xsi:type="object">Worldline\RedirectPayment\Gateway\Command\CommandPool\Virtual</argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Block\Info\Virtual" type="Worldline\PaymentCore\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">Worldline\RedirectPayment\Gateway\Config\Config</argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Gateway\Config\ValueHandlerPool\Virtual" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">Worldline\RedirectPayment\Gateway\Config\ConfigValueHandler\Virtual</item>
                <item name="can_void" xsi:type="string">Worldline\HostedCheckout\Gateway\Response\CanVoidHandler</item>
                <item name="can_cancel" xsi:type="string">Worldline\HostedCheckout\Gateway\Response\CanVoidHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Gateway\Config\ConfigValueHandler\Virtual" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">Worldline\RedirectPayment\Gateway\Config\Config</argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Gateway\Validator\ValidatorPool\Virtual" type="Magento\Payment\Gateway\Validator\ValidatorPool">
        <arguments>
            <argument name="validators" xsi:type="array">
                <item name="country" xsi:type="string">Worldline\RedirectPayment\Gateway\Validator\CountryValidator\Virtual</item>
                <item name="currency" xsi:type="string">Worldline\HostedCheckout\Gateway\Validator\CurrencyValidator</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Gateway\Validator\CountryValidator\Virtual" type="Magento\Payment\Gateway\Validator\CountryValidator">
        <arguments>
            <argument name="config" xsi:type="object">Worldline\RedirectPayment\Gateway\Config\Config</argument>
        </arguments>
    </virtualType>

    <!-- Commands -->
    <virtualType name="Worldline\RedirectPayment\Gateway\Command\CommandPool\Virtual" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">Worldline\RedirectPayment\Gateway\Command\AuthorizeCommand\Virtual</item>
                <item name="sale" xsi:type="string">Worldline\RedirectPayment\Gateway\Command\SaleCommand\Virtual</item>
                <item name="capture" xsi:type="string">Worldline\RedirectPayment\Gateway\Command\CaptureStrategyCommand\Virtual</item>
                <item name="settlement" xsi:type="string">Worldline\RedirectPayment\Gateway\Command\CaptureCommand\Virtual</item>
                <item name="vault_authorize" xsi:type="string">Worldline\RedirectPayment\Gateway\Command\VaultAuthorizeCommand\Virtual</item>
                <item name="vault_sale" xsi:type="string">Worldline\RedirectPayment\Gateway\Command\VaultSaleCommand\Virtual</item>
                <item name="vault_capture" xsi:type="string">Worldline\RedirectPayment\Gateway\Command\VaultCaptureCommand\Virtual</item>
                <item name="void" xsi:type="string">Worldline\RedirectPayment\Gateway\Command\VoidCommand\Virtual</item>
                <item name="refund" xsi:type="string">Worldline\RedirectPayment\Gateway\Command\RefundCommand\Virtual</item>
                <item name="cancel" xsi:type="string">Worldline\RedirectPayment\Gateway\CancelCommand\Virtual</item>
                <item name="deny_payment" xsi:type="string">Worldline\RedirectPayment\Gateway\CancelCommand\Virtual</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Gateway\Command\CaptureStrategyCommand\Virtual" type="Worldline\HostedCheckout\Gateway\Command\CaptureStrategyCommand">
        <arguments>
            <argument name="commandPool" xsi:type="object">Worldline\RedirectPayment\Gateway\Command\CommandPool\Virtual</argument>
        </arguments>
    </virtualType>
    <!-- Authorization&Capture command -->
    <virtualType name="Worldline\RedirectPayment\Gateway\Command\SaleCommand\Virtual" type="Worldline\RedirectPayment\Gateway\Command\AuthorizeCommand\Virtual">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Worldline\RedirectPayment\Gateway\Request\SaleBuilder\Sale\Virtual</argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Gateway\Request\SaleBuilder\Sale\Virtual" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="payment" xsi:type="string">Worldline\HostedCheckout\Gateway\Request\PaymentDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END Authorization&Capture command -->
    <!-- Capture Command -->
    <virtualType name="Worldline\RedirectPayment\Gateway\Command\CaptureCommand\Virtual" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Worldline\RedirectPayment\Gateway\Request\CaptureBuilder\Virtual</argument>
            <argument name="transferFactory" xsi:type="object">Worldline\PaymentCore\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Worldline\HostedCheckout\Gateway\Http\Client\TransactionSubmitForSettlement</argument>
            <argument name="handler" xsi:type="object">Worldline\HostedCheckout\Gateway\Response\TransactionIdHandler</argument>
            <argument name="validator" xsi:type="object">Worldline\HostedCheckout\Gateway\Validator\GeneralResponseValidator</argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Gateway\Request\CaptureBuilder\Virtual" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="capture" xsi:type="string">Worldline\HostedCheckout\Gateway\Request\CaptureDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END Capture Command -->
    <!-- Void Command -->
    <virtualType name="Worldline\RedirectPayment\Gateway\Command\VoidCommand\Virtual" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="client" xsi:type="object">Worldline\HostedCheckout\Gateway\Http\Client\TransactionVoid</argument>
            <argument name="requestBuilder" xsi:type="object">Worldline\RedirectPayment\Gateway\Request\VoidBuilder\Virtual</argument>
            <argument name="handler" xsi:type="object">Worldline\HostedCheckout\Gateway\Response\VoidHandler</argument>
            <argument name="validator" xsi:type="object">Worldline\HostedCheckout\Gateway\Validator\GeneralResponseValidator</argument>
            <argument name="transferFactory" xsi:type="object">Worldline\PaymentCore\Gateway\Http\TransferFactory</argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Gateway\Request\VoidBuilder\Virtual" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="void" xsi:type="string">Worldline\HostedCheckout\Gateway\Request\VoidDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END Void Command -->
    <!-- Cancel Command -->
    <virtualType name="Worldline\RedirectPayment\Gateway\CancelCommand\Virtual" type="Worldline\RedirectPayment\Gateway\Command\VoidCommand\Virtual">
        <arguments>
            <argument name="handler" xsi:type="object">Worldline\HostedCheckout\Gateway\Response\CancelDetailsHandler</argument>
        </arguments>
    </virtualType>
    <!-- END Cancel Command -->
    <!-- Vault Capture (Sale actually) command -->
    <virtualType name="Worldline\RedirectPayment\Gateway\Command\VaultCaptureCommand\Virtual" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Worldline\RedirectPayment\Gateway\Request\AuthorizeBuilder\Virtual</argument>
            <argument name="transferFactory" xsi:type="object">Worldline\PaymentCore\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Worldline\HostedCheckout\Gateway\Http\Client\TransactionSale</argument>
            <argument name="validator" xsi:type="object">Worldline\HostedCheckout\Gateway\Validator\AmountResponseValidator</argument>
        </arguments>
    </virtualType>
    <!-- END Vault Capture (Sale actually) command -->
    <!-- Vault Authorization command -->
    <virtualType name="Worldline\RedirectPayment\Gateway\Command\VaultAuthorizeCommand\Virtual" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Worldline\RedirectPayment\Gateway\Request\AuthorizeBuilder\Virtual</argument>
            <argument name="transferFactory" xsi:type="object">Worldline\PaymentCore\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Worldline\HostedCheckout\Gateway\Http\Client\TransactionSale</argument>
            <argument name="handler" xsi:type="object">Worldline\RedirectPayment\Gateway\Response\HandlerChain\Authorization\Virtual</argument>
            <argument name="validator" xsi:type="object">Worldline\HostedCheckout\Gateway\Validator\AmountResponseValidator</argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Gateway\Request\VaultAuthorizeBuilder\Virtual" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="payment" xsi:type="string">Worldline\HostedCheckout\Gateway\Request\PaymentDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END Vault Authorization command -->
    <!-- Refund Command -->
    <virtualType name="Worldline\RedirectPayment\Gateway\Command\RefundCommand\Virtual" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="client" xsi:type="object">Worldline\HostedCheckout\Gateway\Http\Client\TransactionRefund</argument>
            <argument name="requestBuilder" xsi:type="object">Worldline\RedirectPayment\Gateway\Request\RefundBuilder\Virtual</argument>
            <argument name="validator" xsi:type="object">Worldline\HostedCheckout\Gateway\Validator\GeneralResponseValidator</argument>
            <argument name="handler" xsi:type="object">Worldline\HostedCheckout\Gateway\Response\RefundHandler</argument>
            <argument name="transferFactory" xsi:type="object">Worldline\PaymentCore\Gateway\Http\TransferFactory</argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Gateway\Request\RefundBuilder\Virtual" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="refund" xsi:type="string">Worldline\HostedCheckout\Gateway\Request\RefundDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END Refund Command -->
    <!-- Authorize Command -->
    <virtualType name="Worldline\RedirectPayment\Gateway\Command\AuthorizeCommand\Virtual" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="client" xsi:type="object">Worldline\HostedCheckout\Gateway\Http\Client\TransactionSale</argument>
            <argument name="handler" xsi:type="object">Worldline\RedirectPayment\Gateway\Response\HandlerChain\Authorization\Virtual</argument>
            <argument name="requestBuilder" xsi:type="object">Worldline\RedirectPayment\Gateway\Request\AuthorizeBuilder\Virtual</argument>
            <argument name="transferFactory" xsi:type="object">Worldline\PaymentCore\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Worldline\HostedCheckout\Gateway\Validator\AmountResponseValidator</argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Gateway\Request\AuthorizeBuilder\Virtual" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="payment" xsi:type="string">Worldline\HostedCheckout\Gateway\Request\PaymentDataBuilder</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Gateway\Response\HandlerChain\Authorization\Virtual" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="payment_details" xsi:type="string">Worldline\HostedCheckout\Gateway\Response\PaymentDetailsHandler</item>
                <item name="txn_id" xsi:type="string">Worldline\HostedCheckout\Gateway\Response\TransactionIdHandler</item>
                <item name="vault_details" xsi:type="string">Worldline\HostedCheckout\Gateway\Response\VaultDetailsHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END Authorize Command -->
    <!-- Vault Authorization&Capture command -->
    <virtualType name="Worldline\RedirectPayment\Gateway\Command\VaultSaleCommand\Virtual" type="Worldline\RedirectPayment\Gateway\Command\VaultAuthorizeCommand\Virtual">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Worldline\RedirectPayment\Gateway\Request\SaleBuilder\Virtual</argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Gateway\Request\SaleBuilder\Virtual" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="authorize" xsi:type="string">Worldline\RedirectPayment\Gateway\Request\VaultAuthorizeBuilder\Virtual</item>
            </argument>
        </arguments>
    </virtualType>
    <!-- END Vault Authorization&Capture command -->
    <!-- END Commands -->

    <!-- VAULT configuration -->
    <virtualType name="Worldline\RedirectPayment\Model\Method\Vault\Virtual" type="Worldline\RedirectPayment\Vault\Vault">
        <arguments>
            <argument name="config" xsi:type="object">Worldline\RedirectPayment\Gateway\Config\Config\Virtual</argument>
            <argument name="valueHandlerPool" xsi:type="object">Worldline\RedirectPayment\Gateway\Config\ValueHandlerPool\Vault\Virtual</argument>
            <argument name="vaultProvider" xsi:type="object">Worldline\RedirectPayment\Model\Method\Adapter\Virtual</argument>
            <argument name="code" xsi:type="const">Worldline\RedirectPayment\UI\ConfigProvider::VAULT_CODE</argument>
        </arguments>
    </virtualType>
    <!-- Default Vault Config Handler -->
    <virtualType name="Worldline\RedirectPayment\Gateway\Config\Config\Virtual" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Worldline\RedirectPayment\UI\ConfigProvider::VAULT_CODE</argument>
        </arguments>
    </virtualType>
    <!-- END Default Vault Config Handler -->
    <!-- Custom Vault Config Handler -->
    <virtualType name="Worldline\RedirectPayment\Gateway\Config\CustomConfig\Virtual" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">Worldline\RedirectPayment\UI\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>
    <!-- END Custom Vault Config Handler -->
    <virtualType name="Worldline\RedirectPayment\Gateway\Config\ValueHandlerPool\Vault\Virtual" type="VaultPaymentValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">Worldline\RedirectPayment\Gateway\Config\ConfigValueHandler\DefaultVault\Virtual</item>
                <item name="order_status" xsi:type="string">Worldline\RedirectPayment\Gateway\Config\ConfigValueHandler\NoVault\Virtual</item>
                <item name="min_order_total" xsi:type="string">Worldline\RedirectPayment\Gateway\Config\ConfigValueHandler\NoVault\Virtual</item>
                <item name="max_order_total" xsi:type="string">Worldline\RedirectPayment\Gateway\Config\ConfigValueHandler\NoVault\Virtual</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Gateway\Config\ConfigValueHandler\DefaultVault\Virtual" type="VaultPaymentDefaultValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">Worldline\RedirectPayment\Gateway\Config\Config\Virtual</argument>
        </arguments>
    </virtualType>
    <virtualType name="Worldline\RedirectPayment\Gateway\Config\ConfigValueHandler\NoVault\Virtual" type="VaultPaymentDefaultValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">Worldline\RedirectPayment\Gateway\Config\CustomConfig\Virtual</argument>
        </arguments>
    </virtualType>
    <!-- END VAULT configuration -->
</config>
